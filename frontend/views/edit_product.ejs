<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Edit Product</h1>
    <form action="/admin/products/update" method="POST">
        <input type="hidden" name="id_product" value="<%= product.id_product %>">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= product.description %></textarea>
        <label for="promotional_price">Promotional Price:</label>
        <input type="number" id="promotional_price" name="promotional_price" value="<%= product.promotional_price %>" step="0.01">
        <label for="promotion">Promotion:</label>
        <input type="checkbox" id="promotion" name="promotion" value="1" <%= product.promotion ? 'checked' : '' %>>
        <label for="currency">Currency:</label>
        <input type="text" id="currency" name="currency" value="<%= product.currency %>" required>
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" value="<%= product.stock %>" required>
        <label for="id_category">Category:</label>
        <input type="number" id="id_category" name="id_category" value="<%= product.id_category %>" required>
        <button type="submit">Update Product</button>
    </form>
</body>
</html>
