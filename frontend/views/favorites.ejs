<!DOCTYPE html>
<html>
<head>
    <title>Mes Favoris</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&display=swap" rel="stylesheet">
    <style>
        img {
            max-width: 200px;
            height: auto;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <main>
        <a class="boutons" href="/">Continuer le shopping</a>
        <h1 class="favorites">Liste des favoris :</h1>
        <div class="favorites-list">
            <% if (favoriteItems.length > 0) { %>
                <% favoriteItems.forEach(item => { %>
                    <div class="favorite-item">
                        <div class="image-container" style="background-image: url('<%= item.image_url %>');"></div>
                        <h3><a href="/product/<%= item.id_product %>"><%= item.name %></a></h3>
                        <p>Price: <%= item.price %> <%= item.currency %></p>
                        <form action="/favorites/remove" method="POST">
                            <input type="hidden" name="productId" value="<%= item.id_product %>">
                            <button type="submit">Remove</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Aucun article favori trouv√©.</p>
            <% } %>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>
