<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Admin Dashboard</h1>
    <h2>Products</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Promotional Price</th>
                <th>Promotion</th>
                <th>Currency</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.id_product %></td>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td><%= product.promotional_price %></td>
                    <td><%= product.promotion %></td>
                    <td><%= product.currency %></td>
                    <td><%= product.stock %></td>
                    <td><%= product.id_category %></td>
                    <td>
                        <form action="/admin/products/edit/<%= product.id_product %>" method="GET">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/admin/products/delete" method="POST">
                            <input type="hidden" name="id_product" value="<%= product.id_product %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h2>Add Product</h2>
    <form action="/admin/products/add" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <label for="promotional_price">Promotional Price:</label>
        <input type="number" id="promotional_price" name="promotional_price" step="0.01">
        <label for="promotion">Promotion:</label>
        <input type="checkbox" id="promotion" name="promotion" value="1">
        <label for="currency">Currency:</label>
        <input type="text" id="currency" name="currency" required>
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required>
        <label for="id_category">Category:</label>
        <input type="number" id="id_category" name="id_category" required>
        <button type="submit">Add Product</button>
    </form>
</body>
</html>
