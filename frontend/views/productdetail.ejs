<!DOCTYPE html>
<html>
<head>
    <title><%= product.name %> - Product Details</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        img {
            max-width: 200px;
            height: auto;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <a href="/cart">View Cart</a>
    <a href="/favorites">View Favorites</a>
    <h1><%= product.name %></h1>
    <img src="<%= product.images.split(',')[0] %>" alt="<%= product.name %>">
    <p><%= product.description %></p>
    <% if (product.final_price) { %>
        <p><del>Original Price: <%= product.currency %> <%= product.price %></del></p>
        <p>Promotional Price: <%= product.currency %> <%= product.final_price %></p>
    <% } else { %>
        <p>Price: <%= product.currency %> <%= product.price %></p>
    <% } %>
    <% if (product.sizes && product.sizes.length > 0) { %>
        <% const defaultSize = product.sizes.find(size => size.label === 'S'); %>
        <% if (defaultSize) { %>
            <p>Price: <span id="price-<%= product.id_product %>"><%= defaultSize.price %> <%= product.currency %></span></p>
        <% } else { %>
            <p>No size S available</p>
        <% } %>
        <label for="size-<%= product.id_product %>">Size:</label>
        <select name="size" id="size-<%= product.id_product %>" onchange="updatePrice('<%= product.id_product %>', this.value)">
            <% product.sizes.forEach(size => { %>
                <option value="<%= size.label %>"><%= size.label %></option>
            <% }) %>
        </select>
    <% } else { %>
        <p>No sizes available</p>
    <% } %>
    <form action="/cart/add/<%= product.id_product %>" method="POST">
        <button type="submit">Add to Cart</button>
    </form>
    <button class="add-to-favorites" data-id="<%= product.id_product %>">Add to Favorites</button>

    <h2>Recommended Products</h2>
    <ul>
        <% recommendedProducts.forEach(recommendedProduct => { %>
            <li>
                <h3><%= recommendedProduct.name %></h3>
                <img src="<%= recommendedProduct.images.split(',')[0] %>" alt="<%= recommendedProduct.name %>">
                <% if (recommendedProduct.final_price) { %>
                    <p><del>Original Price: <%= recommendedProduct.currency %> <%= recommendedProduct.price %></del></p>
                    <p>Promotional Price: <%= recommendedProduct.currency %> <%= recommendedProduct.final_price %></p>
                <% } else { %>
                    <p>Price: <%= recommendedProduct.currency %> <%= recommendedProduct.price %></p>
                <% } %>
                <a href="/product/<%= recommendedProduct.id_product %>">View Details</a>
                <form action="/cart/add/<%= recommendedProduct.id_product %>" method="POST">
                    <button type="submit">Add to Cart</button>
                </form>
                <button class="add-to-favorites" data-id="<%= recommendedProduct.id_product %>">Add to Favorites</button>
            </li>
        <% }) %>
    </ul>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.add-to-favorites').click(function(event) {
                event.preventDefault();

                const productId = $(this).data('id');

                $.ajax({
                    url: '/favorites/add/' + productId,
                    method: 'POST',
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                        } else {
                            alert('Failed to add to favorites');
                        }
                    },
                    error: function() {
                        alert('An error occurred');
                    }
                });
            });
        });

        function updatePrice(productId, size) {
            $.ajax({
                url: '/api/price',
                method: 'GET',
                data: { productId: productId, size: size },
                success: function(response) {
                    $('#price-' + productId).text(response.price + ' ' + response.currency);
                },
                error: function() {
                    alert('An error occurred while fetching the price');
                }
            });
        }
    </script>
</body>
</html>
