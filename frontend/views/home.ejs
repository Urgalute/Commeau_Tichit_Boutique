<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Welcome to Our Shop</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/favorites">Favorites</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Products</h2>
        <form id="filterForm" action="/" method="GET">
            <label for="category">Category:</label>
            <select name="category" id="category" onchange="document.getElementById('filterForm').submit()">
                <option value="">All Categories</option>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id_category %>" <%= selectedCategory == category.id_category ? 'selected' : '' %>><%= category.label %></option>
                <% }) %>
            </select>
            <label for="color">Color:</label>
            <select name="color" id="color" onchange="document.getElementById('filterForm').submit()">
                <option value="">All Colors</option>
                <% colors.forEach(color => { %>
                    <option value="<%= color.id_color %>" <%= selectedColor == color.id_color ? 'selected' : '' %>><%= color.label %></option>
                <% }) %>
            </select>
            <label for="sortOrder">Sort By:</label>
            <select name="sort" id="sortOrder" onchange="document.getElementById('filterForm').submit()">
                <option value="default" <%= sortOrder === 'default' ? 'selected' : '' %>>Default</option>
                <option value="price_asc" <%= sortOrder === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                <option value="price_desc" <%= sortOrder === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                <option value="name_asc" <%= sortOrder === 'name_asc' ? 'selected' : '' %>>Name: A to Z</option>
                <option value="name_desc" <%= sortOrder === 'name_desc' ? 'selected' : '' %>>Name: Z to A</option>
            </select>
        </form>
        <div class="product-list">
            <% products.forEach(product => { %>
                <div class="product-item">
                    <h3><a href="/product/<%= product.id_product %>"><%= product.name %></a></h3>
                    <img src="<%= product.images.split(',')[0] %>" alt="<%= product.name %>">
                    <% if (product.sizes && product.sizes.length > 0) { %>
                        <form action="/cart/add/<%= product.id_product %>" method="POST">
                            <label for="size-<%= product.id_product %>">Size:</label>
                            <select name="size" id="size-<%= product.id_product %>" onchange="updatePrice('<%= product.id_product %>', this.value)">
                                <% product.sizes.forEach(size => { %>
                                    <option value="<%= size.label %>"><%= size.label %></option>
                                <% }) %>
                            </select>
                            <p>Price: <span id="price-<%= product.id_product %>"><%= product.price %> <%= product.currency %></span></p>
                            <button type="submit">Add to Cart</button>
                        </form>
                    <% } else { %>
                        <p>No sizes available</p>
                    <% } %>
                    <button class="add-to-favorites" data-id="<%= product.id_product %>">Add to Favorites</button>
                </div>
            <% }) %>
        </div>
        <div class="pagination">
            <% for(let i = 1; i <= totalPages; i++) { %>
                <a href="/?page=<%= i %>&sort=<%= sortOrder %>&category=<%= selectedCategory %>&color=<%= selectedColor %>" <%= currentPage === i ? 'class="active"' : '' %>><%= i %></a>
            <% } %>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function updatePrice(productId, size) {
            $.ajax({
                url: '/api/price',
                method: 'GET',
                data: { productId: productId, size: size },
                success: function(response) {
                    $('#price-' + productId).text(response.price + ' ' + response.currency);
                },
                error: function() {
                    alert('An error occurred while fetching the price');
                }
            });
        }

        $(document).ready(function() {
            $('.add-to-favorites').click(function(event) {
                event.preventDefault();
                const productId = $(this).data('id');
                $.ajax({
                    url: '/favorites/add/' + productId,
                    method: 'POST',
                    success: function(response) {
                        alert(response.message);
                    },
                    error: function() {
                        alert('An error occurred while adding to favorites');
                    }
                });
            });
        });
    </script>
</body>
</html>
