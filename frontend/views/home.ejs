<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Welcome to Our Shop</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/favorites">Favorites</a></li>
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/admin/dashboard">Admin Dashboard</a></li>
                <% } %>
                <% if (user) { %>
                    <li><a href="/auth/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="/auth/login">Login</a></li>
                    <li><a href="/auth/register">Register</a></li>
                <% } %>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Products</h2>
        <form id="sortForm" action="/" method="GET">
            <label for="sortOrder">Sort By:</label>
            <select name="sort" id="sortOrder" onchange="document.getElementById('sortForm').submit()">
                <option value="default" <%= sortOrder === 'default' ? 'selected' : '' %>>Default</option>
                <option value="price_asc" <%= sortOrder === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                <option value="price_desc" <%= sortOrder === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                <option value="name_asc" <%= sortOrder === 'name_asc' ? 'selected' : '' %>>Name: A to Z</option>
                <option value="name_desc" <%= sortOrder === 'name_desc' ? 'selected' : '' %>>Name: Z to A</option>
            </select>
        </form>
        <div class="product-list">
            <% products.forEach(product => { %>
                <div class="product-item">
                    <h3><%= product.name %></h3>
                    <p><%= product.description %></p>
                    <p>Price: <%= product.currency %> <%= product.promotional_price ? product.promotional_price : product.price %></p>
                    <p>Stock: <%= product.stock %></p>
                    <a href="/products/<%= product.id_product %>">View Details</a>
                </div>
            <% }) %>
        </div>
    </main>
</body>
</html>
