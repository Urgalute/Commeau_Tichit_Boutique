<!-- frontend/views/orders.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Orders</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Orders</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.id %></td>
                    <td><%= order.username %></td>
                    <td><%= order.order_date %></td>
                    <td><%= order.total %></td>
                    <td><%= order.status %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
